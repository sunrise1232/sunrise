@page
@model LoginModel

@{ViewData["Title"] = "Login";}


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="login1">
    <div class="container">

        <div class="login1__inner">
            <div class="login1__dialog">
                <form methot="post" id="account" action="#" class="form">

                    <h3 class="form__title">Авторизация</h3>
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <input required asp-for="Input.Email" class="form__input" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>

                    <input required asp-for="Input.Password" class="form__input" placeholder="Пароль" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>

                    <button type="submit" class="button form__button">Войти</button>
                    <i class="fas fa-user-circle"></i>

                </form>

                <div class="authorization__reg">Нет аккаунта? <a href="~/identity/account/register">Регистрация</a></div>

            </div>
        </div>

    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}